              a.waves-effect.waves-light.btn #[i.material-icon.left] Cancel
          .flex-grow-1
            label Pure CSS
            div
              button.pure-button.pure-button-primary Save
              button.pure-button Cancel
          .flex-grow-1
            label Semantic UI
            div
              button.ui.primary.button Save
              button.ui.button Cancel
      .flex-grow-1.card.ml-4: .card-body(ld="csslib",data-name="1")
